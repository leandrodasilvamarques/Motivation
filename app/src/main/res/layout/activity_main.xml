<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_all"
    tools:context=".activitys.MainActivity">

    <LinearLayout
        android:id="@+id/linear_botoes"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/buttons">

        <ImageView
            android:id="@+id/image_ansiedade"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_ansiedade"/>

        <ImageView
            android:id="@+id/image_sabedoria"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sabedoria"/>

        <ImageView
            android:id="@+id/image_amor"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_amor"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_nome"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:fontFamily="@font/cabin"
        android:textColor="@color/texts"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="@string/ola_user"/>

    <TextView
        android:id="@+id/text_frases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:textSize="22sp"
        android:textColor="@color/texts"
        android:gravity="center"
        android:hint="Versiculo"
        android:layout_centerInParent="true"/>

    <View
        android:id="@+id/view_traco"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/texts"
        android:layout_marginHorizontal="128dp"
        android:elevation="5dp"
        android:layout_below="@+id/text_frases"/>

    <Button
        android:id="@+id/button_nova_frase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="128dp"
        android:backgroundTint="@color/buttons"
        android:fontFamily="@font/cabin"
        android:text="@string/nova_frase"
        android:textAllCaps="true"
        android:textColor="@color/texts" />

</RelativeLayout>